@model IEnumerable<crud.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h1>Categories</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#Id</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
            </tr>
        }
    </tbody>
</table>
